generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Carrinho {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  email         String @unique
  nomeProduto   String
}

model Usuario {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  nome          String
  email         String @unique
  role          String
  senha         String
  telefone      String?
  cep           String?
  estado        String?
  cidade        String?
  bairro        String?
  rua           String?
  numero        String?
  complemento   String?
  cpf           String?
  cartao        String?
  nomeCartao    String?
  cvv           String?
  validade      String?
}

type Review {
  nome          String
  estrelas      Int
  comentario    String
}

model Produto {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  imagemURL     String @unique
  nomeProduto   String @unique
  preco         Float
  precoRiscado  Float
  descricao     String
  comprados     Int
  tags          String
  altura        Float
  largura       Float
  comprimento   Float
  peso          Float
  avaliacoes    Review[]
}

model Pedido {
  id               String @id @default(auto()) @map("_id") @db.ObjectId
  nomeProduto      String
  nomeDestinatario String
  cep              String
  estado           String
  cidade           String
  bairro           String
  rua              String
  numero           Int
  valor            Int
  valorFrete       Float
  metodoPagamento  String
}