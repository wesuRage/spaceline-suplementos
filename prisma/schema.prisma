generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Usuario {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  nome          String
  email         String @unique
  role          String
  senha         String
  telefone      Int?
  cep           Int?
  estado        String?
  cidade        String?
  bairro        String?
  rua           String?
  numero        Int?
  complemento   String?
  cpf           Int?
  cartao        Int?
  nomeCartao    String?
  cvv           Int?
  validade      String?
}

model Produto {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  imagemURL     String @unique
  nomeProduto   String @unique
  preco         Float
  precoRiscado  Float?
  descricao     String
  comprados     Int
  tags          String
  altura        Float
  largura       Float
  comprimento   Float
  peso          Float
}

model Pedido {
  id               String @id @default(auto()) @map("_id") @db.ObjectId
  nomeProduto      String
  nomeDestinatario String
  cep              String
  estado           String
  cidade           String
  bairro           String
  rua              String
  numero           Int
  valor            Int
  valorFrete       Float
  metodoPagamento  String
}